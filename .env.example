# Suno API Configuration
# Get your API key at: https://kie.ai/api-key

SUNO_API_KEY=your_api_key_here
SUNO_API_BASE_URL=https://api.kie.ai
SUNO_MODEL=V4_5PLUS

# Server Configuration
PORT=8888

# Cloudflare R2 Configuration (for authentic raga generation)
# Required for uploading reference audio that Suno can access
CLOUDFLARE_R2_ACCESS_KEY_ID=your_access_key_id
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_secret_access_key
CLOUDFLARE_R2_ACCOUNT_ID=your_account_id
CLOUDFLARE_R2_BUCKET_NAME=your_bucket_name
CLOUDFLARE_R2_PUBLIC_URL=https://your-bucket.r2.dev
